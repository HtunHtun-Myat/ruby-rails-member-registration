
<% if notice %>
  <div class="alert alert-info mt-3" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="text-center mt-3">
  <h1>Members List</h1>
</div>
<div class="text-right mb-3">
  <%= link_to "New member", new_member_path , class: "btn btn-success" %>
  <button type="submit" class="btn btn-primary">CSV Export</button>
</div>
<div id="members">

<% if Member.count != 0 %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Gender</th>
      <th scope="col">Photo</th>
      <th scope="col">Date</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @members.each do |member| %>
    <tr>
      <th scope="row"><%= member.id %></th>
      <th scope="row"><%= member.name %></th>

      <th scope="row"><%= member.email %></th>
      <th scope="row"><%= member.gender %></th>
      <th scope="row"><%= member.photo.filename %></th>
      <th scope="row"><%= member.age %></th>
      <th scope="row">
      <div class="row">
        <div class="col-sm-4">
          <%= link_to "Edit", edit_member_path(member) , class: "btn btn-success" %>
        </div>
        <div class="col-sm-2">
          <%= button_to "Delete", member, method: :delete , class: "btn btn-danger w-20" %>
        </div>
      </div>
      </th>
    </tr>
  <% end %>
  </tbody>
</table>
  <% else %>
  <div class="text-center mx-auto p-5">
    <p style="font-size: 20px"><i>There are no registration members, you can register <strong><%= link_to "here", new_member_path %></strong><i></p>
  </div>
<% end %>
</div>