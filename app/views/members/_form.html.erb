<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-outline mb-4">
    <%= form.label :name, class: "form-lable" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-outline mb-4">
    <%= form.label :email, class: "form-lable" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="form-outline datepicker">
        <%= form.label :age, class: "form-label" %>
        <%= form.date_field :age, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6 mb-4">
      <%= form.label :gender %>
      <div class="form-check form-check-inline mt-1">
        <%= radio_button("member", "gender", "Male", class: "form-check-input") %>
        <%= label(:member_gender, :male, :class => "form-check-label") %>

        <%= radio_button("member", "gender", "Female", class: "form-check-input ml-2") %>
        <%= label(:member_gender, :female, :class => "form-check-label") %>

        <%= radio_button("member", "gender", "Others", class: "form-check-input ml-2") %>
        <%= label(:member_gender, :others, :class => "form-check-label") %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="form-outline mb-4">
        <%= form.label :phone, class: "form-lable" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6 mb-4">
      <div class="form-outline mb-4">
        <%= form.label :facebook, class: "form-lable" %>
        <%= form.text_field :facebook, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-outline mb-4">
    <%= form.label :photo, class: "form-lable" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= link_to "Back", members_path , class: "btn btn-secondary" %>
    <%= form.submit :class => "btn btn-success" %>
  </div>
<% end %>
